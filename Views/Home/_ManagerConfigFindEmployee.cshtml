@using System
@using System.Collections.Generic
@using System.Linq
@using System.Web
@using System.Web.Mvc
@using System.Data.SqlClient
@using System.Data
@using System.Configuration
@using System.Text
@using System.Diagnostics;
@using System.Web.UI.HtmlControls;
@using LaborNeedsScheduling.Models
@model DataTable

<head>
    <style>
        .AddButton {
            width: 80px;
            height: 40px;
            display: block;
            vertical-align: middle;
            margin: 0 auto;
            margin-left: 30px;
            background-color: #73ff78; /* Green */
            color: #000000;
            border-color: #53fe59;
            font-size: 16px;
        }
    </style>
</head>
<body>
    @if (Model.Rows.Count == 0)
    {
        <h4>Employee not found.</h4>
    }
    else if (Model.Rows[0][0].ToString() == "1")
    {
        <h4>Employee is already assigned to the current store.</h4>
    }
    else
    {
    <div style="display:table">
        <div style="display:inline-block; float:left">
            <table class="FoundEmployee" id="FoundEmployee" border="1" cellpadding="5">
                <thead>
                    <tr>
                        <th style="padding:3px; text-align:center">Name</th>
                        <th style="padding:3px; text-align:center">Id</th>
                        <th style="padding:3px; text-align:center">Store Code</th>
                        <th style="padding:3px; text-align:center">Role</th>
                        <th style="padding:3px; text-align:center">Level</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="padding:3px; text-align:center">@Model.Rows[0][0]</td>
                        <td style="padding:3px; text-align:center">@Model.Rows[0][1]</td>
                        <td style="padding:3px; text-align:center">@Model.Rows[0][2]</td>
                        <td style="padding:3px; text-align:center">@Model.Rows[0][3]</td>
                        <td style="padding:3px; text-align:center">@Model.Rows[0][4]</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div style="display:table-cell; vertical-align:middle;">
            <button type="button" onclick="addEmployee()" class="AddButton">Add</button>
        </div>
    </div>
    }
</body>